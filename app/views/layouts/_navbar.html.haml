%nav.navbar.navbar-default
	.container-fluid
		.navbar-header
			%button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#navbar-collapse", "data-toggle" => "collapse", :type => "button"}
				%span.sr-only Toggle navigation
				%span.icon-bar
			%span.navbar-brand
				= link_to image_tag("resized_shoff_logo.jpg"), current_user
			#navbar-collapse.collapse.navbar-collapse
				%ul.nav.navbar-nav
					%li.nav-item
						= link_to "Home", current_user, class: "nav-link"
				-if user_signed_in?
					.navbar-text
						= link_to "Latest Financial Info", current_user, class: "nav-link" if current_user.client?
						= link_to "Client Management", current_user, class: "nav-link" if current_user.admin?
					.navbar-text
						= link_to "Sign Out", logout_path, :method => :delete, class: "nav-link"
				- else
					.navbar-text
						= link_to "Client Sign In", new_user_session_path, :class => 'navbar-link'